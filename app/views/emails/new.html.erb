<h3>Compose Mail</h3>

<div style="border:2px solid #a1a1a1;
        margin-top:20px;
        font-size:15px;
        padding:10px 40px;
        background:#dddddd;
        width:400px;
        border-radius:25px;">

<%= form_for @email do |f| %>

    <%= f.label :subject %><br>
    <%= f.text_field :subject,value: @email.subject%><br>
    <%= f.hidden_field :id, :value => @email.id %>
    <!--%= f.label :sender %><br>
    <!--%= f.text_field :sender%><br> -->
    <%= f.label :receiver_email %><br>
    <%= f.text_field :receiver_email %><br>
    <%= f.label :message %><br>
    <%= f.text_area(:message, size: '50x10', :value => @email.message)%><br>
    <!--%= #f.submit %-->

    <%= f.submit "Send" %>
    <%= f.submit "Draft" %>

<% end %>
</div>