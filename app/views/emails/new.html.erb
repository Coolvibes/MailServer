<h3>Compose Mail</h3>

<%= form_for @email do |f| %>

    <%= f.label :subject %><br>
    <%= f.text_field :subject %><br>
    <!--%= f.label :sender %><br>
    <!--%= f.text_field :sender%><br> -->
    <%= f.label :receiver_email %><br>
    <%= f.text_field :receiver_email %><br>
    <%= f.label :message %><br>
    <%= f.text_area(:message, size: '50x10')%><br>
    <%= f.submit %>

<% end %>